<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
	<id>com.ete_sync_app.ete_sync_app</id>
	<name>etesyncapp</name>
	<summary>EteSync Tasks App</summary>

	<metadata_license>CC0-1.0</metadata_license>
	<recommends>
		<control>touch</control>
		<control>pointing</control>
		<control>keyboard</control>
	</recommends>
	<developer_name>jheld</developer_name>
	<url type="homepage">https://gitlab.com/jheld/ete-sync-app</url>
	<url type="bugtracker">https://gitlab.com/jheld/ete-sync-app/-/issues</url>

	<custom>
	  <value key="Purism::form_factor">workstation</value>
	</custom>

	<branding>
		<color type="primary" scheme_preference="light">#DAEDFF</color>
		<color type="primary" scheme_preference="dark">#2A2F48</color>
